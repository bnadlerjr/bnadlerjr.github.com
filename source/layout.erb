<!doctype html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8" />
    <meta name="robots" content="index, follow" />
    <meta name="rating" content="general" />
    <meta name="description" content="<%= current_page.data.description %>" />
    <meta property="og:title" content="<%= current_page.data.title %>" />
    <meta property="og:type" content="<%= current_page.data.type || 'article' %>" />
    <meta property="og:url" content="<%= full_url(current_page.destination_path) %>">
    <meta property="og:description" content="<%= current_page.data.description %>" />
    <meta name="twitter:card" content="summary">
    <meta name="twitter:url" content="<%= full_url(current_page.destination_path) %>">
    <meta name="twitter:title" content="<%= current_page.data.title %>">
    <meta name="twitter:description" content="<%= current_page.data.description %>">
    <link href="http://fonts.googleapis.com/css?family=Lora|Istok+Web" rel="stylesheet" type="text/css">
    <link rel="author" href="https://plus.google.com/u/0/102659859857244557612">
    <%= stylesheet_link_tag "styles" %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-39915750-1', 'bobnadler.com');
      ga('send', 'pageview');
    </script>
  </head>
  <body>
    <div id="wrapper">
      <header>
        <% link_to "/index.html" do %>
          <%= image_tag 'me.png', alt: 'Bob Nadler, Jr.' %>
          <%= image_tag 'logo.png', alt: 'Logo' %>
        <% end %>
        <ul class="social">
          <li><%= icon "github", "https://github.com/bnadlerjr" %></li>
          <li><%= icon "twitter", "https://twitter.com/bnadlerjr" %></li>
          <li><%= icon "linkedin", "https://www.linkedin.com/in/bobnadlerjr" %></li>
          <li><%= icon "rss", "/feed.xml" %></li>
        </ul>
        <nav>
          <ul>
            <li><%= link_to "about", "/about.html" %></li>
            <li><%= link_to "posts", "/index.html" %></li>
          </ul>
        </nav>
      </header>
      <main>
        <%= yield %>
        <footer>
          <p>
            <%= link_to "about", "/about.html" %>
            |
            <%= link_to "posts", "/index.html" %>
            |
            <%= link_to "rss", "/feed.xml" %>
            |
            <%= link_to "github", "https://github.com/bnadlerjr" %>
            |
            <%= link_to "twitter", "https://twitter.com/bnadlerjr" %>
            |
            <%= link_to "linkedin", "https://www.linkedin.com/in/bobnadlerjr" %>
            <br />
            Copyright &copy; 2010-2014 <%= link_to "Bob Nadler, Jr.", "/index.html" %>
          </p>
        </footer>
      </main>
    </div>
    <script type="text/javascript">
      (function() {
        var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
        po.src = 'https://apis.google.com/js/platform.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
      })();
    </script>
    <script src="//platform.linkedin.com/in.js" type="text/javascript">
     lang: en_US
    </script>
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
  </body>
</html>
