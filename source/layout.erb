<!doctype html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8" />
    <meta name="robots" content="index, follow" />
    <meta name="rating" content="general" />
    <meta name="description" content="<%= current_page.data.description %>" />
    <%= partial "meta_open_graph" %>
    <%= partial "meta_twitter_card" %>
    <meta name="viewport" content="initial-scale=1.0, width=device-width">
    <link href="//fonts.googleapis.com/css?family=Lora|Istok+Web" rel="stylesheet" type="text/css">
    <link rel="author" href="https://plus.google.com/u/0/102659859857244557612">
    <link rel="icon" type="image/png" href="favicon.png">
    <%= stylesheet_link_tag "styles" %>
    <% if content_for?(:article_styles) %>
      <%= yield_content :article_styles %>
    <% end %>
    <% if build? %>
    <%= partial "google_analytics" %>
    <% end %>
  </head>
  <body>
    <div class="wrapper">
      <div class="content">
        <div class="mobile-header">
            <% link_to "/index.html" do %>
              <%= image_tag 'logo.png', alt: 'Logo' %>
            <% end %>
            <ul>
              <li><%= link_to "about", "/about.html" %></li>
              <li><%= link_to "articles", "/index.html" %></li>
              <li><%= link_to "github", "https://github.com/bnadlerjr" %></li>
              <li><%= link_to "twitter", "https://twitter.com/bnadlerjr" %></li>
              <li><%= link_to "linkedin", "https://www.linkedin.com/in/bobnadlerjr" %></li>
              <li><%= link_to "rss", "/feed.xml" %></li>
            </ul>
        </div>
        <header>
          <% link_to "/index.html" do %>
            <%= image_tag 'me.png', alt: 'Bob Nadler, Jr.' %>
            <%= image_tag 'logo.png', alt: 'Logo' %>
          <% end %>
          <nav>
            <ul>
              <li><%= link_to "about", "/about.html" %></li>
              <li><%= link_to "articles", "/index.html" %></li>
            </ul>
          </nav>
          <ul class="social">
            <li><%= icon "github", "https://github.com/bnadlerjr" %></li>
            <li><%= icon "twitter", "https://twitter.com/bnadlerjr" %></li>
            <li><%= icon "linkedin", "https://www.linkedin.com/in/bobnadlerjr" %></li>
            <li><%= icon "rss", "/feed.xml" %></li>
          </ul>
        </header>
        <main>
          <%= yield %>
          <footer>
            <ul>
              <li><%= link_to "about", "/about.html" %></li>
              <li><%= link_to "articles", "/index.html" %></li>
              <li><%= link_to "github", "https://github.com/bnadlerjr" %></li>
              <li><%= link_to "twitter", "https://twitter.com/bnadlerjr" %></li>
              <li><%= link_to "linkedin", "https://www.linkedin.com/in/bobnadlerjr" %></li>
              <li><%= link_to "rss", "/feed.xml" %></li>
            </ul>
            Copyright &copy; 2010-2018 <%= link_to "Bob Nadler, Jr.", "/index.html" %>
          </footer>
        </main>
      </div>
    </div>
    <%= partial "social_setup" %>
  </body>
</html>
