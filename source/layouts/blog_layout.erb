<% wrap_layout :layout do %>
  <article>
    <h1><%= current_article.title %></h1>
    <div class="article-header">
      <p class="article-date"><%= current_article.date.strftime("%B %e, %Y") %></p>
      <%= social_buttons %>
    </div>
    <%= yield %>
  </article>
  <hr />
  <%= social_buttons %>
<% end %>
